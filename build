#!/bin/bash

USER_GID=$(id -g $USER)
USER_UID=$(id -u $USER)

if [[ "$OSTYPE" == "darwin"* ]]; then
  USER_GID=1000
  USER_UID=1000
fi

docker rmi -f roaming-terminal:$USER
 
docker build \
  --build-arg USER_NAME=$USER \
  --build-arg USER_GID=$USER_GID \
  --build-arg USER_UID=$USER_UID \
  --build-arg GH_TOKEN=$GH_TOKEN \
  --tag roaming-terminal:$USER .
